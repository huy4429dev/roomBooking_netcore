
<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Summer - @ViewBag.Title</title>

  <!-- Bootstrap core CSS -->
  <link href="~/assets/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
 <link href="~/common/fontawesome/css/fontawesome.css" rel="stylesheet">
  <link href="~/common/fontawesome/css/brands.css" rel="stylesheet">
  <link href="~/common/fontawesome/css/solid.css" rel="stylesheet">
  <!-- Custom styles for this template -->
  <link href="~/assets/admin/css/simple-sidebar.css" rel="stylesheet">
  <link rel="stylesheet" href="~/common/css/mdbootstrap.min.css">
   @if(IsSectionDefined("Css"))
    {
        @RenderSection("Css", required:true)
    }
    <style>
      .validation-summary-errors {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        padding: 5px 0;
      }

      ul {
          margin-bottom: 0;
      }
      ul#pannel > a {
          display: none;
      }

      ul#pannel li a#flip {
          display: none;
      }

      ul#pannel li {
          padding: 5px 0;
      }
      ul#pannel li a {
          display: inline-block;
          width: 100%;
          height: 100%;
      }
    </style>
</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading"><a href="/admin/dashboard">SUMMER </a> </div>
      <div class="list-group list-group-flush">
        <a href="/admin/dashboard" class="list-group-item list-group-item-action bg-light">Dashboard</a>
        <a href="/admin/profile" class="list-group-item list-group-item-action bg-light">Hồ sơ</a>
        <a href="#" class="list-group-item list-group-item-action bg-light" id="flip">Quản lý phòng
          <ul id="pannel">
            <li><a href="/admin/room"> Phòng</a></li>
            <li><a href="/admin/room/book-room"> Đặt phòng</a></li>
            <li><a href="/admin/room/type"> Loại phòng</a></li>
            <li><a href="/admin/room/config"> Cấu hình phòng </a></li>
          </ul>
        </a>
        <a href="#" class="list-group-item list-group-item-action bg-light">Quản lý thực đơn</a>
        <a href="#" class="list-group-item list-group-item-action bg-light">Quản lý doanh thu</a>
        <a href="/admin/employee" class="list-group-item list-group-item-action bg-light">Quản lý nhân viên</a>
        <a href="#" class="list-group-item list-group-item-action bg-light">Quản lý khách hàng</a>
        <a href="/admin/blog" class="list-group-item list-group-item-action bg-light">Quản lý tin tức</a>
        <a href="/admin/contact" class="list-group-item list-group-item-action bg-light">Quản lý phản hồi</a>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars    "></i></button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
             <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                 @User.Identity.Name
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                 <span class="dropdown-item" >
                        <form method="post" action="/admin/logout" style="width:140px" >
                            <button type="submit" class="nav-ink btn-btn-link py-0" style="border:none; width:100%">
                                Đăng xuất
                            </button>
                        </form>
                  </span>
              </div>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container-fluid pt-4">
          @RenderBody()
      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
   <script src="~/common/js/jquery-3.5.1.min.js"></script>
    <script src="~/common/js/jquery-ui.js"></script>
   <script src="~/assets/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/common/js/bootstrap.min.js"></script>
    <script src="~/common/js/popper.min.js"></script>
    <script src="~/common/js/mdbootstrap.min.js"></script>
  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });

    $(document).ready(function(){
      $('#pannel').hide();
      $("#flip").click(function(){
        $("#pannel").slideToggle("slow");
      });
    });
  </script>
    @if(IsSectionDefined("Script"))
    {
        @RenderSection("Script", required:true)
    }
</body>

</html>
