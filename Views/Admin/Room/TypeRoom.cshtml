@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Loại Phòng";
}
@model List<TypeRoom>
<div class="text-right mb-2">
         <a href="/admin/employee/create" class="btn btn-primary btn-sm">
             Thêm nhân viên
         </a>
</div>
<table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="th-sm" >#ID
      </th>
      <th class="th-sm">Loại phòng
      </th>
      <th class="th-sm text-center">Mô tả
      </th>
      <th colspan="2" class="th-sm text-center">Hành động
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
    <tr>
      <td >@item.Id</td>
      <td>@item.Name</td>
      <td class="text-center">@item.Description</td>
      <td>Sửa</td>
      <td>Xóa</td>
    </tr>
    }
    <tr>
      <td >1</td>
      <td>Vip</td>
      <td class="text-center">Tin được không ? <i class="fa fa-eye" aria-hidden="true"></i></td>
      <td>Sửa</td>
      <td>Xóa</td>
    </tr>
  </tbody>
</table>

@section Css{
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <style>
      .show-message{
        cursor: pointer;
      }
      .show-message:hover{
         color:blue;
      }
    </style>
}
@section Script{
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable( 
               {  
                 "order": [[ 0, "desc" ]]
               },
            );
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}